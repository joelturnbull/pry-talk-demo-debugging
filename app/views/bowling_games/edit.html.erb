<table>
  <tr>
    <% @bowling_game.frames.each_with_index do |frame,i| %>
      <td colspan="2"><%= "Frame #{i+1}" %></td>
    <% end %>
  </tr>
  <tr>
    <% @bowling_game.frames.each do |frame| %>
      <td><%= binding.pry; frame[0].pins %></td>
      <td><%= frame[1].pins %></td>
    <% end %>
  </tr>
</table>

Throw it!
<% (0..10).each do |pins| %>
  <%= form_tag bowling_game_path, method: "put", style: "display: inline" do %>
    <%= hidden_field_tag(:pin, pins) %>
    <%= submit_tag(pins) %>
  <% end %>
<% end %>
